<Window x:Class="DesktopRestorer.SystemShortcutsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="系统快捷方式" Height="350" Width="450" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="选择要添加到桌面的系统快捷方式" Margin="0,0,0,10" FontSize="14"/>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="ShortcutsPanel">
                <Button x:Name="ThisPCButton" Width="100" Height="120" Margin="5" Click="CreateShortcut_Click" Tag="icons/computer.svg">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Width="48" Height="48" Margin="0,10,0,5"/>
                        <TextBlock Text="此电脑" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="RecycleBinButton" Width="100" Height="120" Margin="5" Click="CreateShortcut_Click" Tag="icons/recycle-bin.svg">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Width="48" Height="48" Margin="0,10,0,5"/>
                        <TextBlock Text="回收站" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="ControlPanelButton" Width="100" Height="120" Margin="5" Click="CreateShortcut_Click" Tag="icons/control-panel.svg">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Width="48" Height="48" Margin="0,10,0,5"/>
                        <TextBlock Text="控制面板" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="NetworkButton" Width="100" Height="120" Margin="5" Click="CreateShortcut_Click" Tag="icons/network.svg">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Width="48" Height="48" Margin="0,10,0,5"/>
                        <TextBlock Text="网络" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="UsersButton" Width="100" Height="120" Margin="5" Click="CreateShortcut_Click" Tag="icons/user-folder.svg">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Width="48" Height="48" Margin="0,10,0,5"/>
                        <TextBlock Text="用户文件夹" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="DocumentsButton" Width="100" Height="120" Margin="5" Click="CreateShortcut_Click" Tag="icons/documents.svg">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Width="48" Height="48" Margin="0,10,0,5"/>
                        <TextBlock Text="文档" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </WrapPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="CloseButton" Content="关闭" Width="80" Height="30" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>